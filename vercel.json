{
    "version": 2,
    "builds": [{
            "src": "littlelemon/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
        },
        {
            "src": "build.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles"
            }
        }
    ],
    "routes": [
        { "src": "/restaurant/static/(.*)", "dest": "/staticfiles/$1" },
        {
            "src": "/(.*)",
            "dest": "littlelemon/wsgi.py"
        }
    ]
}